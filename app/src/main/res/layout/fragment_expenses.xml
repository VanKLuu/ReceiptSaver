<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TextView for displaying the total amount from all receipts -->
        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Chart view to display monthly expenditure -->
        <!-- Assuming you are using a third-party library like MPAndroidChart -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartMonthlyExpenditure"
            android:layout_width="380dp"
            android:layout_height="400dp"/>

        <!-- TextView for displaying the total number of receipts -->
        <TextView
            android:id="@+id/tvTotalReceipts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
